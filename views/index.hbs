{{#if user}}
{{> postForm}}
{{/if}}

<div class="row postWrapper">
    {{#each posts}}
    <div class="col s4" data-postid="{{this.id}}">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          <p>{{this.text}}</p>
        </div>
        <div class="card-action">
          <a href="/post/{{this.id}}/edit">This is a link</a>
          {{!-- {{#if this.owner}}
          <button>delete</button>
          {{/if}} --}}
          {{#if (ownerCheck this  ../user)}}
            <button>delete</button>
          {{/if}}
        </div>
      </div>
  </div>
  {{/each}}
</div>