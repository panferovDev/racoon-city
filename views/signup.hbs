<div class="row">
    <form class="col s6 offset-s3" action='/user/signup' method="post" name="postForm">
      <div class="row">
        <div class="input-field">
          <input placeholder="email" id="email" name="email" type="email" class="validate">
          <label for="email">email</label>
        </div>
        <div class="input-field">
          <input id="last_name" placeholder="name" name="name" type="text" >
          <label for="last_name">name</label>
        </div>
        <div class="input-field">
          <input id="password" placeholder="password" name="password" type="password" class="validate">
          <label for="password">password</label>
        </div>
      </div>
      <button>Send</button>
    </form>
  </div>