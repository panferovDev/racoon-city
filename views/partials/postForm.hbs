<div class="row">
    <form class="col s10 offset-s1" action='/post' method="post" name="postForm">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Title" id="first_name" name="title" type="text" class="validate">
          <label for="first_name">Title</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" placeholder="Text" name="text" type="text" class="validate">
          <label for="last_name">Text</label>
        </div>
      </div>
      <button>Send</button>
    </form>
  </div>